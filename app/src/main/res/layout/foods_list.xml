<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="515dp"
    android:id="@+id/listfood"
    >

    <LinearLayout
        android:id="@+id/foodlist"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:elevation="30dp"
        android:background="#FBDE9A"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/foodlist1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/food_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green">
            <TextView
                android:id="@+id/food_name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="48dp"
                android:gravity="start"
                android:text="Pizza Hut"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp" />
</LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FBDE9A">

            <LinearLayout
                android:id="@+id/nutrientslist_energy"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="64dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/foodlist">

                <TextView
                    android:id="@+id/enerckcal"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="Energy"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/dark_green"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/food_enerckcal"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="235 kcal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/dark_green"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_calories" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/devider1"
                android:layout_width="3dp"
                android:layout_height="100dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="64dp"
                android:background="@color/dark_green"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/foodlist">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/nutrientslist_protein"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="64dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/nutrientslist_energy"
                app:layout_constraintTop_toBottomOf="@+id/foodlist">

                <TextView
                    android:id="@+id/procnt"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="Protein"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/dark_green"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/food_procnt"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="32 g"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/dark_green"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_proteins" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/devider2"
                android:layout_width="3dp"
                android:layout_height="100dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="64dp"
                android:background="@color/dark_green"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/foodlist">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nutrientslist_fat"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="64dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/nutrientslist_energy"
                app:layout_constraintTop_toBottomOf="@+id/foodlist">

                <TextView
                    android:id="@+id/fat"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="Fat"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/dark_green"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/food_fat"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="98 g"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/dark_green"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_fat" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/devider3"
            android:layout_width="340dp"
            android:layout_height="3dp"
            android:background="@color/dark_green"
            android:orientation="horizontal"
            android:layout_marginStart="36dp"
            android:gravity="center">

        </LinearLayout>

        <TextView
            android:id="@+id/food_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="24dp"
            android:text="Recipe: No recipe for this food :("
            android:textColor="@color/dark_green"
            />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>