<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/listfood"
    >

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:id="@+id/foodlist"
        android:layout_width="150dp"
        android:layout_height="230dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />

        <TextView
            android:id="@+id/food_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="Pizza Hut"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nutrientslist"
        android:layout_width="210dp"
        android:layout_height="230dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/food_enerckcal"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:text="Energy, kcal :"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/food_procnt"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Protein:" />

        <TextView
            android:id="@+id/food_fat"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Total lipid (fat):" />

        <TextView
            android:id="@+id/food_chocdf"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Carbohydrate:" />

        <TextView
            android:id="@+id/food_fibtg"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Fiber, total dietary:" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>